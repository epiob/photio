<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2> {{image.name}} </h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.filename}}">
            <i class="fa fa-times"></i> Eliminar
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{image.filename}}" alt="Not found" class="img-fluid"></img>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
            <i class="fas fa-thumbs-up"></i> Likes
        </button>
        <p>
            <span class="likes-count">{{image.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i>{{image.views}}
        </p>
        <p>
            <i class="far fa-clock"></i>
            {{timeago image.timestamp}}
        </p>
    </div>
    <div class="card mt-2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Comentarios</h3>
            <button class="btn btn-info" id="btn-toggle-comment">
                <i class="fa fa-comment-o"></i> Escribe un Comentario
            </button>
        </div>
        <div class="card-body">
            <blockquote id="post-comment">
                <form action="/images/{{image.filename}}/comment" method="POST">
                    <div class="form-group p-1">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" required>
                    </div>
                    <div class="form-group p-1">
                        <input type="text" class="form-control" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group p-1">
                        <textarea class="form-control" name="comment" placeholder="Escribe tu Comentario!"></textarea>
                    </div>
                    <div class="form-group p-1">
                        <button class="btn btn-success" id="btn-comment">
                            <i class="fa fa-comment"></i>Publicar
                        </button>
                    </div>
                </form>
            </blockquote>
            <ul class="list-group p-4">
                {{#each comments}}
                <li>
                    <div class="row">
                        <a href="" class="col text-center">
                            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="not found">
                        </a>
                        <blockquote class="col">
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquote-footer">
                                {{name}} - {{timeago timestamp}}
                            </footer>
                        </blockquote>
                    </div>
                </li>

                {{/each}}
            </ul>
        </div>
    </div>
</div>