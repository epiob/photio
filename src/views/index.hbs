<div class="card">

    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Sube una Imagen
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group p-1">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="form-control" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                    </div>
                </div>
            </div>
            <div class="form-group p-1">
                <input type="text" name="title" class="form-control" placeholder="Titulo para la Imagen" required>
            </div>
            <div class="form-group p-1">
                <textarea name="description" rows="2" class="form-control" placeholder="Descripcion para la Imagen"
                    required></textarea>
            </div>
            <div class="form-group p-1">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Subir
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class = "card-header bg-dark text-white">
        <h3><i class= "far fa-images"></i> Subidas Recientes</h3>
    </div>
    <div class="card-body">
        <div class="row">
        
            {{#each images}}

                <div class="col-md-4">
                    <a href="/images/{{filename}}">
                        
                        <img src="../public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail"> </img>
                    </a>

                </div>
                
            {{/each}}

        </div>

    </div>
    
</div>






